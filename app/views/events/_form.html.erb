<%= form_for(@event,
             html: {
                class: "form-horizontal"
}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <%= yield %>
  <div class="control-group">
    <%= f.label :title, class: 'control-label' %><br />
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time, class: 'control-label' %><br />
    <div class="controls">
      <%= f.datetime_select :time %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :organizer, class: 'control-label' %><br />
    <div class="controls">
      <%= f.collection_select :organizer_id, Organizer.all,
                              :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, class: 'control-label' %><br />
    <div class="controls">
      <%= f.text_field :location %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rules, class: 'control-label' %><br />
    <div class="controls">
      <%= f.text_area :rules %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :game, class: 'control-label' %><br />
    <div class="controls">
      <%= f.text_field :game %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :participants, class: 'control-label' %><br />
    <div class="controls">
      <%= f.text_area :participants %>
    </div>
  </div>
  <div class="form-actions ">
    <%= f.submit class: "btn btn-primary"%>
  </div>
</div>
<% end %>
