    </div>
  </div>
  <div class="control-group">
    <%= f.label :organization, class: 'control-label' %><br />
    <div class="controls">
      <%= f.text_field :organization %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :joined, class: 'control-label' %><br />
    <div class="controls">
      <%= f.date_select :joined %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
</div>
<% end %>
